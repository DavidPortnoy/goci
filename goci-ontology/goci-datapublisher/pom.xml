<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>goci-ontology</artifactId>
        <groupId>uk.ac.ebi.fgpt</groupId>
        <version>0.2-SNAPSHOT</version>
    </parent>

    <groupId>uk.ac.ebi.fgpt</groupId>
    <artifactId>goci-datapublisher</artifactId>
    <version>0.2-SNAPSHOT</version>

    <name>GOCI DataPublisher (converts GWAS data to OWL)</name>
    <url>http://www.ebi.ac.uk/seqdb/confluence/display/GOCI/Home</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!-- spring jdbc for database access -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jdbc</artifactId>
            <version>3.0.3.RELEASE</version>
        </dependency>

        <!-- OWL API and HermiT reasoner, for converting GWAS concepts -->
        <dependency>
            <groupId>org.semanticweb.owlapi</groupId>
            <artifactId>owlapi</artifactId>
            <version>3.2.4</version>
        </dependency>

        <dependency>
            <groupId>hermit</groupId>
            <artifactId>hermit</artifactId>
            <version>1.3.4</version>
        </dependency>

        <!-- ZOOMA for matching unmapped traits to EFO -->
        <dependency>
            <groupId>uk.ac.ebi.microarray</groupId>
            <artifactId>zooma-plugin</artifactId>
            <version>1.0</version>
            <exclusions>
                <exclusion>
                    <groupId>net.sourceforge.owlapi</groupId>
                    <artifactId>owlapi</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>owlapi</groupId>
                    <artifactId>owlapi</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>hermit</groupId>
                    <artifactId>hermit</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.semanticweb</groupId>
                    <artifactId>HermiT</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

</project>
